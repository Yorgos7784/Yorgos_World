import java.util.Scanner;

public class InputPractice {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("국어, 영어, 수학, 과학의 점수를 입력하세요 : ");
		double KOREAN = sc.nextInt();
		double ENGLISH = sc.nextInt();
		double MATH = sc.nextInt();
		double SCIEN = sc.nextInt();
		System.out.printf("국어의 점수는 : %d점 입니다\n", KOREAN);
		System.out.printf("엉어의 점수는 : %d점 입니다\n", ENGLISH);
		System.out.printf("수학의 점수는 : %d점 입니다\n", MATH);
		System.out.printf("과학의 점수는 : %d점 입니다\n", SCIEN);
		System.out.println("모든 점수의 평균은 " + ((KOREAN + ENGLISH + MATH + SCIEN) / 4) + "입니다");
		

	}

}
