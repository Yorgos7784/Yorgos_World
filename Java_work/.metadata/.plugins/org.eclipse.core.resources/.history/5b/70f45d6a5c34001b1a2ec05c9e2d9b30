import java.util.Scanner;

public class InputPractice {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("국어, 영어, 수학, 과학의 점수를 입력하세요 : ");
		int KOREAN = sc.nextInt();
		int ENGLISH = sc.nextInt();
		int MATH = sc.nextInt();
		int SCIEN = sc.nextInt();
		double ever = (KOREAN + ENGLISH + MATH + SCIEN) / 4;
		System.out.printf("국어의 점수는 : %d점 입니다\n", KOREAN);
		System.out.printf("엉여의 점수는 : %d점 입니다\n", ENGLISH);
		System.out.printf("수학의 점수는 : %d점 입니다\n", MATH);
		System.out.printf("과학의 점수는 : %d점 입니다\n", SCIEN);
		System.out.printf("모든 점수의 평균은 %d점 입니다\n", ever);


	}

}
