
public class Var_Practice2 {

	public static void main(String[] args) {

		// 원의 면적을 구하는 프로그램
		double PI = 3.14;
		int r = 4;
		System.out.println("반지름 x 반지름 x PI = " + (r * r * PI) + "(원의 면적)");
		
		// 성적표
		int korean;
		int english;
		int math;
		int scien;
		
		korean = 90;
		english = 80;
		math = 70;
		scien = 60;
		System.out.println("모든 과목의 평균은 " + ((korean + english + math + scien)/4) + "점 입니다");

	}

}
